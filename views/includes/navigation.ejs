<div class="page-wrapper">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <span class="navbar-brand mb-0 h1"><a href="/">Index</a></span>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link <% if(path === '/admin/students') { %> active disabled <% } %>" href="/admin/students" title="View Students">View Students</a>
            </li>
            <li class="nav-item">
                <a class="nav-link <% if(path === '/admin/instructors') { %> active disabled <% } %>" href="/admin/instructors" title="View Instructors">View Instructors</a>
            </li>
            <li class="nav-item">
                <a class="nav-link <% if(path === '/courses') { %> active disabled <% } %>" href="/courses" title="View Courses">View Courses</a>
            </li>

            <% if(isAuthenticated && userType === 'student') { %>
                <li class="nav-item">
                    <a class="nav-link <% if(path === '/student/add-course') { %> active disabled <% } %>" href="/student/add-course" title="Register Courses">Register Courses</a>
                </li>
                <% } %>

                    <% if(isAuthenticated && userType === 'admin') { %>
                        <li class="nav-item">
                            <a class="nav-link <% if(path === '/admin/add-user') { %> active disabled <% } %>" href="/admin/add-user" title="Add a New User">Add User</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <% if(path === '/admin/add-course') { %> active disabled <% } %>" href="/admin/add-course" title="Add a New Course">Add Course</a>
                        </li>
                        <% } %>
                            <% if(isAuthenticated && userType !== 'admin' ) { %>
                                <li class="nav-item">
                                    <a class="nav-link <% if(path === '/instructor/courses' || path === '/student/courses') { %> active disabled <% } %>" href="<% if(userType === 'instructor') { %>/instructor/courses <% } else if (userType === 'student') { %> /student/courses <% } %>" title="View My Courses">My Courses</a>
                                </li>
                                <% } %>
                                    <% if(isAuthenticated) { %>
                                        <li class="nav-item">
                                            <form action="/logout" method="POST">
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <input class="btn nav-link" type="submit" value="Logout">
                                            </form>
                                        </li>
                                        <% } else { %>
                                            <li class="nav-item">
                                                <a class="nav-link <% if(path === '/signup') { %> active disabled <% } %>" href="/signup" title="Sign up">Sign up</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link <% if(path === '/login') { %> active disabled <% } %>" href="/login" title="Login">Login</a>
                                            </li>
                                            <% } %>
        </ul>
    </nav>
</div>