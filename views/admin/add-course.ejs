<%- include ('../includes/header.ejs') %>
    </head>

    <body>
        <%- include ('../includes/navigation.ejs') %>
            <div class="container">
                <form class="add-player-form" action="/admin/add-course" method="post" novalidate>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <input type="text" class="form-control <%= validationErrors.find(e => e.param === 'name') ? 'border-danger' : '' %>" name="name" id="name" placeholder="Course Name" required>
                        </div>
                        <div class="form-group col-md-4">
                            <select class="form-control <%= validationErrors.find(e => e.param === 'instructorId') ? 'border-danger' : '' %>" name="instructorId" required>
                                <option value="">Choose Instructor</option>
                                <% users.forEach(user => { %>
                                    <option value="<%= user.Instructor.id %>"><%= user.name %></option>
                                    <% }) %>
                              </select>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-primary float-right">Add Course</button>
                </form>
            </div>
            <%- include('../includes/end.ejs') %>