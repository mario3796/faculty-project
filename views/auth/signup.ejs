<%- include('../includes/header.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <center>
                <div class="col-sm-4 table-wrapper">
                    <% if(errorMessage) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= errorMessage %>
                        </div>
                        <% } %>
                            <form action="/signup" method="POST" novalidate>
                                <div class="form-group row">
                                    <label for="email" class="col-sm-3 col-form-label">E-Mail</label>
                                    <input type="email" name="email" id="email" value="<%= oldInput.email %>" class="form-control col-sm-9 <%= validationErrors.find(e => e.param === 'email') ? 'border-danger' : '' %>" required>
                                </div>
                                <div class="form-group row">
                                    <label for="name" class="col-sm-3 col-form-label">User Name</label>
                                    <input type="text" name="name" id="name" value="<%= oldInput.name %>" class="form-control col-sm-9 <%= validationErrors.find(e => e.param === 'name') ? 'border-danger' : '' %>" required>
                                </div>
                                <div class="form-group row">
                                    <label for="password" class="col-sm-3 col-form-label">Password</label>
                                    <input type="password" name="password" id="password" value="<%= oldInput.password %>" class="form-control col-sm-9 <%= validationErrors.find(e => e.param === 'password') ? 'border-danger' : '' %>" required>
                                </div>
                                <div class="form-group row">
                                    <label for="confirmPassword" class="col-sm-3 col-form-label">Confirm Password</label>
                                    <input type="password" name="confirmPassword" id="confirmPassword" value="<%= oldInput.confirmPassword %>" class="form-control col-sm-9 <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'border-danger' : '' %>">
                                </div>
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn btn-primary col-sm-3" type="submit">Sign up</button>
                            </form>
                </div>
            </center>
            <%- include('../includes/end.ejs') %>